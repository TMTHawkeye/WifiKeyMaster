<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="backpress_text_style">
        <item name="android:textSize">@dimen/_26sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="title_style2">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

 <style name="Divider_bckpress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
    </style>

    <style name="text_style_normal">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_style_btn">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yellow_dark</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_30sdp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_30sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="switch_style" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/yellow</item>



        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
    </style>

</resources>