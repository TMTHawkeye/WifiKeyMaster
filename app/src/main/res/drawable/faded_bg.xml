    <!-- background color -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#95FFFFFF"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />
            <corners
                android:topRightRadius="@dimen/_20sdp"
                android:bottomRightRadius="@dimen/_20sdp"
                android:topLeftRadius="@dimen/_20sdp"
                android:bottomLeftRadius="@dimen/_20sdp"/>
        </shape>
    </item>
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#95FFFFFF"
                android:endColor="#30BFA0FF"
                android:startColor="#25BFA0FF"  />
